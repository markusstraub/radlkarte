{
  "name": "@radlobby-at/radlkarte",
  "description": "Website for desktop, tablet & smartphone usage with the goal to provide useful (route) information for cyclists.",
  "version": "1.0.0",
  "author": "Radlobby Ã–stereich (https://radlobby.at)",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/markusstraub/radlkarte.git"
  },
  "bugs": {
    "url": "https://github.com/markusstraub/radlkarte/issues"
  },
  "homepage": "https://github.com/markusstraub/radlkarte",
  "private": true,
  "scripts": {
    "start": "$(yarn bin why)",
    "build": "vite build --emptyOutDir",
    "serve": "vite --port 8081",
    "preview": "vite build --emptyOutDir && vite preview --port 8081",
    "geojson": "./src/data/prepare_geojson.py",
    "pois": "python3 ./src/data/download_pois_from_osm.py src/data src/data/osm-overpass",
    "pois:klagenfurt": "npm run pois --only-region klagenfurt",
    "pois:linz": "npm run pois --only-region linz",
    "pois:rheintal": "npm run pois --only-region rheintal",
    "pois:schwarzatal": "npm run pois --only-region schwarzatal",
    "pois:steyr": "npm run pois --only-region steyr",
    "pois:wien": "npm run pois --only-region wien",
    "lint": "npm run lint:html && yarn lint:js",
    "lint:html": "python3 ./node_modules/html5-lint/html5check.py ./src/index.html",
    "lint:js": "jshint ./src/js/*"
  },
  "devDependencies": {
    "html5-lint": "^0.3.0",
    "jshint": "^2.13.6",
    "vite": "^5.4.1"
  },
  "dependencies": {
    "maplibre-gl": "^4.7.0"
  }
}
